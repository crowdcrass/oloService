<%@ page contentType="text/html;charset=UTF-8" %>
<%
	String path = request.getContextPath();
	String basePath = request.getScheme() + "://"
			+ request.getServerName() + ":" + request.getServerPort()
			+ path + "/";
%>
<html>

<head>   
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=8" />

	<title>系统功能树维护</title>
	<link rel="stylesheet" type="text/css" href="../css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="../css/bootstrap-responsive.css" />
    <link rel="stylesheet" type="text/css" href="../css/style.css" />
    <script type="text/javascript" src="../js/jquery.js"></script>
    
    <script type="text/javascript" src="../js/bootstrap.js"></script>
    <script type="text/javascript" src="../js/ckform.js"></script>
    <script type="text/javascript" src="../js/common.js"></script>
	<script src="<%=basePath%>/js/jquery-1.9.1.js"	type="text/javascript">	</script>
		<script src="<%=basePath %>js/jquery-1.8.1.min.js" type="text/javascript"></script>
	
	<script src="<%=basePath %>js/zTree-3.4/js/jquery.ztree.core-3.4.min.js" type="text/javascript"></script>
	<script src="<%=basePath %>js/zTree-3.4/js/jquery.ztree.exedit-3.4.min.js" type="text/javascript"></script>
	<link rel="stylesheet" href="<%=basePath %>js/zTree-3.4/css/zTreeStyle/zTreeStyle.css" type="text/css">
	
   </script>
	<script type="text/javascript">
		function saveCaseType(){
			var C_NAME = $("#C_NAME").val();
			if(C_NAME.replace(/\s/g,'') == ""){
				alert("名称不能为空!");
				return false;
			}
			
			var type = /^[0-9]*[1-9][0-9]*$/;
			
			var C_PARENT_ID = $("#C_PARENT_ID").val();
			if(C_PARENT_ID.replace(/\s/g,'') == ""){
				alert("上级不能为空!");
				return false;
			}
			if(C_PARENT_ID != "0"){
				if(type.test(C_PARENT_ID) != true){
					alert("请填写正确的上级id！");
					return false;
				}
			}
			var C_SORT_NUM = $("#C_SORT_NUM").val();
			if(C_SORT_NUM.replace(/\s/g,'') == ""){
				alert("排序不能为空!");
				return false;
			}
			
			if(type.test(C_SORT_NUM) != true){
				alert("请填写正确的序号！");
				return false;
			}
			document.getElementById("updateCaseTypeForm").submit();
		}
		
		function init(){
			var flag = "${flag}";
	
			if(null != flag && "" != flag){
				if(flag == "1"){
					alert("修改成功!");
					parent.window.location.reload();
				}else if(flag =="3"){
					alert("用户已失效，请重新登录后再编辑!");
				}else{
					alert("数据未能成功修改，请稍后再试！");
				}
			}
		}
	</script>
</head>

<body onload="init()">
<form id="updateCaseTypeForm" name="updateCaseTypeForm" action="<%=basePath %>caseTypeAction/update" method="post">
	<input type="hidden" value="${treeNode.CT_ID }" name="CT_ID" id="CT_ID">
	<table class="table table-bordered table-hover definewidth m10">
		<tr>	
			<td class="tdLabel" width="20%">名称</td>	
			<td><input type="text" value="${treeNode.C_NAME }" name="C_NAME" id="C_NAME"></td>
		</tr>
		<tr>	
			<td class="tdLabel">上级名称</td>	
			<td><input type="text" name="PARENT_NAME" id="PARENT_NAME" value="${treeNode.PARENT_NAME }" readonly="readonly">
				
			</td>
		</tr>
		<tr>	
			<td class="tdLabel">上级ID</td>	
			<td>
			<input id="C_PARENT_ID" type="text" name="C_PARENT_ID" value="${treeNode.C_PARENT_ID }"  onclick="showMenu();">
			&nbsp;<a id="menuBtn" href="#" onclick="showMenu(); return false;">选择</a>
				<font color="#FF0000">*</font>
			</td>
		</tr>
		<tr>	
			<td class="tdLabel">描述</td>	
			<td><input type="text" value="${treeNode.C_DESC }" name="C_DESC" id="C_DESC"></td>
		</tr>
		<tr>	
			<td class="tdLabel">序号</td>	
			<td><input type="text" value="${treeNode.C_SORT_NUM }" name="C_SORT_NUM" id="C_SORT_NUM"></td>
		</tr>
		<tr>
			<td  colspan="2" align="center">
				<input type="button" value="保存"  class="btn btn-success" style="cursor: pointer;" onclick="saveCaseType()" />
				<input type="button" value="取消"  class="btn btn-primary" style="cursor: pointer;" onclick="window.history.go(-1)" />
			</td>
		</tr>
	</table>
	<div id="menuContent" class="menuContent" style="display:none; position: absolute;">
		<ul id="treeDemo" class="ztree" style="margin-top:0; width:180px; height: 300px;"></ul>
	</div>
</form>
<style>
<!--
#menuContent{
	margin-top: 10px;
  border: 1px solid #617775;
  background: #f0f6e4;
  width: 220px;
  height: 360px;
  overflow-y: scroll;
  overflow-x: auto;
}
.line{
	height: auto;
}
-->
</style>
<script type="text/javascript">
	var setting = {
		view: {
			dblClickExpand: false
		},
		data: {
			simpleData: {
				enable: true,
				idKey: "id",
				pIdKey: "pid",
				rootPId: ""
			}
		},
		callback: {
			onClick: onClick
		}
	};

	var zNodes = ${flash.menuTreeJson};
	function onClick(e, treeId, treeNode) {
		var zTree = $.fn.zTree.getZTreeObj("treeDemo"),
		nodes = zTree.getSelectedNodes(),
		v = "";
		nodes.sort(function compare(a,b){return a.id-b.id;});
		for (var i=0, l=nodes.length; i<l; i++) {
			v += nodes[i].name + ",";
		}
		if (v.length > 0 ) v = v.substring(0, v.length-1);
		var cityObj = $("#PARENT_NAME");
		cityObj.attr("value", v);
		//alert(treeNode.id+"======="+treeId);
		$("#C_PARENT_ID").val(treeNode.id);
	}

	function showMenu() {
		var cityObj = $("#C_PARENT_ID");
		var cityOffset = $("#C_PARENT_ID").offset();
		$("#menuContent").css({left:cityOffset.left + "px", top:(cityOffset.top + cityObj.outerHeight())-8 + "px"}).slideDown("fast");

		$("body").bind("mousedown", onBodyDown);
	}
	function hideMenu() {
		$("#menuContent").fadeOut("fast");
		$("body").unbind("mousedown", onBodyDown);
	}
	function onBodyDown(event) {
		if (!(event.target.id == "menuBtn" || event.target.id == "menuContent" || $(event.target).parents("#menuContent").length>0)) {
			hideMenu();
		}
	}
	$(document).ready(function(){
		$.fn.zTree.init($("#treeDemo"), setting, zNodes);
		
	});
	
</script>
</body>