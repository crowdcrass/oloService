/* link color */
a,a:link {
	color: #6;
	text-decoration: none;
}

a:visited {
	/* color: #006699;*/
	text-decoration: none;
}

a:hover {
	color: #bc2931;
	text-decoration: underline;
}

a:active {
	color: #bc2931;
}

/* for button: <input type=submit class=stdButton /> */
.stdButton {
	background-color: #82AEE5;
	border: 1px solid #CBDDF4;
	cursor: pointer;
	font-family: Verdana;
	font-size: 9pt;
	height: 22px;
}

/* formTable */
.formTable {
	border-collapse: collapse;
	width: 98%;
	margin: 1%;
}

.formTable .tdLabel {
	border: 1px solid #CCC;
	height: 25px;
	width: 150px;
	font-weight: bold;
	font-size: 9pt;
	vertical-align: top;
	text-align: center;
}

.formTable td {
	border: 1px solid #CCC;
}

.formTable span.required {
	color: red;
	font-weight: bold;
}

.queryPanel {
	border-collapse: collapse;
	width: 100%;
	margin: 0 auto;
}

#treeScorColor {

	scrollbar-face-color: #e1edfd;
	scrollbar-shadow-color: #FFFFFF;
	scrollbar-highlight-color: #FFFFFF;
	scrollbar-3dlight-color: #e1edfd;
	scrollbar-darkshadow-color: #e1edfd;
	scrollbar-track-color: #FFFFFF;
	scrollbar-arrow-color:  	#4169E1 ;
}

/*���� �������ı�����ʽ���б�ͷ����ʽ*/
.caption2 {
	background: url(../images/caption2_bg.gif) repeat-x;
	font-size: 14px;
	font-weight: bold;
	height: 28px;
	border-bottom: 1px #adc8e4 solid;
	border-top: 1px #adc8e4 solid;
	line-height: 28px;
	padding-left: 10px;
}

/* �޸� ���������е���ʽ  label �������С*/
.queryPanel .tdLabel {
	vertical-align: center;
	text-align: right;
	font-size: 9pt;
	padding-right: 5px;
}

.queryPanel table {
	width: 100%;
	margin-top: 0px;
	border-collapse: collapse;
	border: solid 1px #adc8e4;
	border-top:0px;
	background:#f6faff;
	
	
	background-repeat: repeat-x;
	background-position: top;
	text-align: left;
}

.queryPanel table td {
	height: 32px;
	padding: 1px;
	padding-left:5px;
	border-bottom: solid 1px #adc8e4;
	border-left: solid 1px #abc8e4;
	border-right: solid 1px #abc8e4;
}

.queryPanel table td.tdLabel {
	background: #e1edfd;
	width: 120px;
}

/*���������� input label */ /* Messages */
.flash_error,.flash_success {
	font-weight: bold;
	background-repeat: no-repeat;
	padding: 7px 40px;
	margin: 0 1px;
	border: 1px solid black;
	background-color: #ffffcc;
	color: #000000;
}

.flash_error {
	border: 2px solid red;
	color: #f30;
	background-image: url(images/icon_flash_error.gif);
}

.flash_success {
	background-image: url(images/icon_flash_success.gif);
}

